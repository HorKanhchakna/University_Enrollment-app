<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivIllustration"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:contentDescription="@string/bike_illustration"
            android:src="@drawable/welcome" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/welcome_to_enroll_app"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/thank_you_for_choosing_enroll_app_your_all_in_one_solution_for_a_smooth_and_hassle_free_university_enrollment_process_whether_you_re_a_first_year_student_or_continuing_your_academic_journey_our_app_is_here_to_guide_you_every_step_of_the_way"
            android:textColor="#555555"
            android:textSize="14sp"
            tools:ignore="VisualLintLongText" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000080"
            android:elevation="2dp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="#F1F1F1"
            android:textSize="18sp"
            tools:ignore="VisualLintButtonSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <!-- Left divider -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />

            <!-- "Or" text -->
            <TextView
                android:id="@+id/tvOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingHorizontal="16dp"
                android:text="Or"
                android:textColor="#666666" />

            <!-- Right divider -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />
        </LinearLayout>


        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#F1F1F1"
            android:elevation="2dp"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="#000080"
            android:textSize="18sp"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>
</ScrollView>
