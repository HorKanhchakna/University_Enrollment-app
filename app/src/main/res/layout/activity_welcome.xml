<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Top Illustration -->

        <!-- Welcome Text -->

        <ImageView
            android:id="@+id/ivIllustration"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:contentDescription="@string/bike_illustration"
            android:src="@drawable/welcome" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/welcome_to_enroll_app"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thank_you_for_choosing_enroll_app_your_all_in_one_solution_for_a_smooth_and_hassle_free_university_enrollment_process_whether_you_re_a_first_year_student_or_continuing_your_academic_journey_our_app_is_here_to_guide_you_every_step_of_the_way"
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginTop="8dp"
            tools:ignore="VisualLintLongText" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B00B9"
            android:layout_marginTop="24dp"
            android:elevation="4dp"
            tools:ignore="VisualLintButtonSize" />

        <!-- Or separator -->
        <TextView
            android:id="@+id/tvOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="______or______"
            android:textColor="#757575" />

        <!-- Sign In Button -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="#3B00B9"
            android:backgroundTint="#F1F1F1"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>
</ScrollView>
